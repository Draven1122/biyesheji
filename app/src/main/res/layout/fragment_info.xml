<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
  <LinearLayout
      android:background="@color/white"
      android:id="@+id/llayout_tab"
      android:layout_width="match_parent"
      android:layout_height="36dp"
      android:layout_alignParentTop="true"
      android:orientation="horizontal"
      >
    <RelativeLayout
        android:background="@color/transparent_grey"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
      <TextView
          android:background="@color/transparent_grey"
          android:textColor="@color/dark_grey"
          android:id="@+id/tv_laber_disease"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:text="疾病快讯"
          android:gravity="center"
          />
      <View
          android:visibility="visible"
          android:id="@+id/v_line1"
          android:layout_width="match_parent"
          android:background="@color/light_blue"
          android:layout_alignParentBottom="true"
          android:layout_height="1dp"
          />
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/transparent_grey"

        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
      <TextView
          android:textColor="@color/dark_grey"
          android:background="@color/transparent_grey"

          android:id="@+id/tv_laber_drug"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:text="药品新闻"
          android:gravity="center"
          />
      <View
          android:visibility="invisible"
          android:id="@+id/v_line2"
          android:layout_width="match_parent"
          android:background="@color/light_blue"
          android:layout_alignParentBottom="true"
          android:layout_height="1dp"
          />
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/transparent_grey"

        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
      <TextView
          android:textColor="@color/dark_grey"
          android:background="@color/transparent_grey"

          android:id="@+id/tv_laber_medical"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:text="医疗新闻"
          android:gravity="center"
          />
      <View
          android:visibility="invisible"
          android:id="@+id/v_line3"
          android:layout_width="match_parent"
          android:background="@color/light_blue"
          android:layout_alignParentBottom="true"
          android:layout_height="1dp"
          />
    </RelativeLayout>

    <RelativeLayout
        android:background="@color/transparent_grey"

        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
      <TextView
          android:textColor="@color/dark_grey"
          android:background="@color/transparent_grey"
          android:id="@+id/tv_laber_tips"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:text="生活贴士"
          android:gravity="center"
          />
      <View
          android:visibility="invisible"
          android:id="@+id/v_line4"
          android:layout_width="match_parent"
          android:background="@color/light_blue"
          android:layout_alignParentBottom="true"
          android:layout_height="1dp"
          />
    </RelativeLayout>

  </LinearLayout>
  <com.handmark.pulltorefresh.library.PullToRefreshListView
      android:id="@+id/lstv_news"
      ptr:ptrMode="both"
      android:layout_below="@id/llayout_tab"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      ></com.handmark.pulltorefresh.library.PullToRefreshListView>
</RelativeLayout>