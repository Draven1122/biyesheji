<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhicall.hax"
    >

  <uses-permission android:name="android.permission.INTERNET"></uses-permission>
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>

  <application
      android:name=".MyApplication"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme"
      >
    <activity
        android:name=".activities.CourseListActivity"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light"
        >
    </activity>
    <activity
        android:name=".activities.ListViewWithSeekActivity"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light"
        >
    </activity>
    <activity
        android:name=".activities.MyViewActivity"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light"
        >
    </activity>
    <activity
        android:name=".activities.AnimatorActivity"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light"
        >
    </activity>
    <activity
        android:name=".activities.ViewPagerWithTabActivity"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light"
        >
    </activity>
    <activity
        android:name=".activities.ThreadActivity"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light"
        >
    </activity>
    <activity
        android:name=".activities.PullToLoadActivity"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light"
        >
    </activity>
    <activity
        android:name=".activities.PullToRefreshActvity"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light"
        >
    </activity>
    <activity
        android:name=".activities.MeasureViewActivity"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light"
        >
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
  </application>

</manifest>
